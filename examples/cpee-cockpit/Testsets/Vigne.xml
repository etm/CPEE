  </context-variables>
  <endpoints>
    <wo_pattern>&quot;http://no_patterns-needed.org/service&quot;</wo_pattern>
    <with_pattern>&quot;http://here-is-a-pattern-used.org/#{@pattern_context}/some-uri-parts&quot;</with_pattern>
