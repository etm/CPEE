  </endpoints>
  <description xmlns="http://rescue.org/ns/controlflow/0.2" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
    <call id="a1_1" endpoint="timeout" http-method="post">
      <input name="timeout" fix-value="10"/>
    </call>
    <parallel wait="2">
      <parallel_branch>
        <call id="a2_1" endpoint="timeout" http-method="post">
