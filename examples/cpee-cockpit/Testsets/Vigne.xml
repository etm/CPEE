  <transformation>
    <!-- {{{ -->
    <xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform" xmlns:flow="http://rescue.org/ns/controlflow/0.2">

      <xsl:output method="text"/>
    <!-- XML-To-String -->
    <!-- {{{ -->
